<!-- User Menu -->
{% if is_logged_in and user %}
    <div class="relative" id="user-menu">
        <button class="flex items-center space-x-2 hover:opacity-80 transition-opacity" id="user-menu-button">
            <img src="{{ user.avatar|default('https://api.dicebear.com/7.x/adventurer/svg?seed=' ~ user.username) }}" alt="Avatar" class="w-8 h-8 rounded-full">
            <span class="text-sm font-medium">{{ user.username }}</span>
            <i class="fas fa-chevron-down text-xs text-gray-400"></i>
        </button>
        <div class="hidden absolute right-0 mt-2 w-56 bg-gray-900/95 shadow-2xl rounded-xl border border-blue-900 backdrop-blur z-50" id="user-menu-dropdown">
            <div class="p-4 border-b border-blue-800">
                <div class="flex items-center space-x-3">
                    <img src="{{ user.avatar|default('https://api.dicebear.com/7.x/adventurer/svg?seed=' ~ user.username) }}" alt="Avatar" class="w-12 h-12 rounded-full">
                    <div>
                        <div class="font-medium text-white">{{ user.username }}</div>
                        <div class="text-sm text-gray-400">{{ user.email }}</div>
                    </div>
                </div>
            </div>
            <div class="py-1">
                <a href="{{ base_url }}/profile" class="block px-4 py-2 text-sm hover:bg-gray-800 text-gray-100">
                    <i class="fas fa-user w-5"></i> Profile
                </a>
                <a href="{{ base_url }}/recently-played" class="block px-4 py-2 text-sm hover:bg-gray-800 text-gray-100">
                    <i class="fas fa-history w-5"></i> Recently Played
                </a>
                <a href="{{ base_url }}/favorites" class="block px-4 py-2 text-sm hover:bg-gray-800 text-gray-100">
                    <i class="fas fa-heart w-5"></i> Favorites
                </a>
                <button type="button" onclick="showAvatarPickerModal()" class="w-full text-left px-4 py-2 text-blue-400 font-bold text-base hover:bg-gray-800">
                    <i class="fas fa-random w-5"></i> Change Avatar
                </button>
                <button type="button" onclick="showAvatarUploadModal()" class="w-full text-left px-4 py-2 text-green-400 font-bold text-base hover:bg-gray-800">
                    <i class="fas fa-upload w-5"></i> Upload Avatar
                </button>
                <button onclick="logout()" class="w-full text-left px-4 py-2 text-red-400 font-bold text-base hover:bg-gray-800">
                    <i class="fas fa-sign-out-alt w-5"></i> Logout
                </button>
            </div>
        </div>
    </div>
{% else %}
    <div class="flex items-center space-x-2">
        <img src="https://api.dicebear.com/7.x/adventurer/svg?seed={{ random()|replace({'.':'','0x':''}) }}" alt="Avatar" class="w-8 h-8 rounded-full">
        <button class="btn-primary flex items-center space-x-2" id="loginBtn">
            <span>Login</span>
        </button>
    </div>
{% endif %} 
 