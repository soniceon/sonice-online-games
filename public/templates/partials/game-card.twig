<!-- Game Card -->
<div class="game-card">
    <img src="{{ base_url }}/{{ game.image }}" alt="{{ game.title }}" class="game-card-image" loading="lazy" onerror="this.onerror=null;this.src='{{ base_url }}/assets/images/defaults/game-default.webp';">
    <div class="game-card-content">
        <h3 class="game-card-title">{{ game.title }}</h3>
        <p class="game-card-description">{{ game.description }}</p>
        <div class="game-card-meta">
            <span class="game-category">{{ game.category }}</span>
            <span class="play-count">{{ game.plays }} plays</span>
        </div>
        <a href="{{ game.url }}" class="btn-primary mt-4">Play Now</a>
    </div>
</div> 
 
