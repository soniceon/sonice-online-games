<div class="relative">
    <input 
        type="text" 
        class="search-bar"
        placeholder="Search games..."
        id="search-input"
    >
    <div class="absolute right-4 top-1/2 -translate-y-1/2 text-gray-400">
        <i class="fas fa-search"></i>
    </div>
    
    <div id="search-suggestions" class="hidden absolute top-full left-0 right-0 mt-2 bg-[var(--navy-800)] rounded-xl shadow-xl overflow-hidden z-50">
        <div class="p-4">
            <div class="flex items-center justify-between mb-2">
                <h3 class="text-sm font-medium text-gray-400">Search Suggestions</h3>
                <span class="text-xs text-gray-500">Press Enter to search</span>
            </div>
            <div id="suggestion-list" class="space-y-2">
                <!-- Search suggestions will be dynamically added via JavaScript -->
            </div>
        </div>
    </div>
</div> 
 