{% extends "layouts/base.twig" %}

{% block content %}
<div class="content-wrapper" style="margin-top: 104px;">
  <div class="flex flex-col items-center">
    <h1 class="text-3xl font-bold mb-6 text-white">{{ category_name }} Games</h1>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 w-full max-w-7xl">
      {% for game in category_games %}
      <div class="game-card bg-blue-700/60 rounded-xl overflow-hidden shadow-lg flex flex-col">
        <a href="{{ base_url }}/game/{{ game.slug }}" class="block">
          <img src="{{ base_url }}/assets/images/games/{{ game.slug }}.webp" alt="{{ game.title }}" class="w-full h-40 object-cover"
               onerror="this.onerror=null;this.src='/assets/images/defaults/game-default.webp';">
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-1 text-white">{{ game.title }}</h3>
            <div class="flex flex-wrap gap-1 mt-2">
              {% for cat in game.categories %}
              <a href="{{ base_url }}/category/{{ cat|lower|replace({' ':'-'}) }}" class="bg-blue-primary px-2 py-1 rounded-full text-xs text-white hover:bg-blue-800 transition">{{ cat }}</a>
              {% endfor %}
            </div>
          </div>
        </a>
      </div>
      {% else %}
      <div class="text-white/70 col-span-full">No games found in this category.</div>
      {% endfor %}
    </div>
  </div>
</div>
{% endblock %} 