{% extends "base.twig" %}
{% block content %}
<div class="max-w-2xl mx-auto py-12">
  <h1 class="text-3xl font-bold mb-4">Contact</h1>
  <p class="text-lg text-gray-200 mb-6">Have questions, suggestions, or feedback? We'd love to hear from you! Fill out the form below or email us at <a href="mailto:contact@sonice.games" class="text-blue-400 underline">contact@sonice.games</a>.</p>
  <form class="bg-white/10 rounded-lg p-6 shadow-lg">
    <div class="mb-4">
      <label class="block text-gray-300 mb-2">Your Name</label>
      <input type="text" class="w-full px-4 py-2 rounded bg-gray-800 text-white" placeholder="Enter your name">
    </div>
    <div class="mb-4">
      <label class="block text-gray-300 mb-2">Your Email</label>
      <input type="email" class="w-full px-4 py-2 rounded bg-gray-800 text-white" placeholder="Enter your email">
    </div>
    <div class="mb-4">
      <label class="block text-gray-300 mb-2">Message</label>
      <textarea class="w-full px-4 py-2 rounded bg-gray-800 text-white" rows="4" placeholder="Type your message..."></textarea>
    </div>
    <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-semibold px-6 py-2 rounded">Send Message</button>
  </form>
</div>
{% endblock %} 