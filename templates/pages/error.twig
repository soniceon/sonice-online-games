{% extends "base.twig" %}

{% block content %}
<div class="min-h-screen flex items-center justify-center bg-gray-900">
    <div class="max-w-md w-full bg-gray-800 rounded-lg shadow-lg p-8 text-center">
        <div class="mb-6">
            <svg class="mx-auto h-16 w-16 text-red-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
        </div>
        
        <h1 class="text-2xl font-bold text-white mb-4">Oops! Something went wrong</h1>
        
        {% if error_message %}
            <p class="text-gray-300 mb-6">{{ error_message }}</p>
        {% else %}
            <p class="text-gray-300 mb-6">We encountered an unexpected error. Please try again later.</p>
        {% endif %}
        
        <div class="space-y-3">
            <a href="{{ base_url }}/" class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200">
                Go to Homepage
            </a>
            
            <button onclick="history.back()" class="block w-full bg-gray-600 hover:bg-gray-700 text-white font-medium py-3 px-4 rounded-lg transition duration-200">
                Go Back
            </button>
        </div>
        
        {% if debug %}
            <div class="mt-6 p-4 bg-gray-700 rounded-lg text-left">
                <h3 class="text-sm font-semibold text-gray-300 mb-2">Debug Information:</h3>
                <pre class="text-xs text-gray-400 overflow-auto">{{ debug }}</pre>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %} 