{% from 'components/category-card.twig' import render as categoryCard %}

{% macro render(categories, columns = 4) %}
<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-{{ columns }} gap-6">
    {% for category in categories %}
        {{ categoryCard(category) }}
    {% else %}
        <div class="col-span-full text-center py-8">
            <p class="text-gray-400">No categories found</p>
        </div>
    {% endfor %}
</div>
{% endmacro %} 