{% macro render(title, subtitle = null, action_url = null, action_text = null) %}
<div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-6">
    <div>
        <h2 class="text-2xl font-bold mb-1">{{ title }}</h2>
        {% if subtitle %}
        <p class="text-gray-400">{{ subtitle }}</p>
        {% endif %}
    </div>
    {% if action_url and action_text %}
    <a href="{{ base_url }}{{ action_url }}" class="mt-4 sm:mt-0 inline-flex items-center px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors">
        {{ action_text }}
        <i class="fas fa-arrow-right ml-2"></i>
    </a>
    {% endif %}
</div>
{% endmacro %} 