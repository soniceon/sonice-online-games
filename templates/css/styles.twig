/* Custom CSS Variables */
:root {
    --navy-900: #0a0f2c;  /* 更深的背景色 */
    --navy-800: #1a1f3c;  /* 次要背景色 */
    --navy-700: #2a2f4c;  /* 边框和悬停状态 */
    --navy-600: #475569;
    --navy-500: #64748b;
    --navy-400: #94a3b8;
    --navy-300: #cbd5e1;
    --navy-200: #e2e8f0;
    --navy-100: #f1f5f9;
    --navy-50: #f8fafc;
    --blue-gradient-start: #4169E1;  /* 渐变起始色 */
    --blue-gradient-end: #00BFFF;    /* 渐变结束色 */
}

/* Base Styles */
body {
    background-color: var(--navy-900);
    color: var(--navy-100);
    min-height: 100vh;
}

.page-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

.content-wrapper {
    flex: 1;
    display: flex;
    margin-top: 4rem;
}

/* Header Styles */
.header-bg {
    background: linear-gradient(to right, #0d1130, #121c44, #152a69);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

.search-bar {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 0.5rem;
    backdrop-filter: blur(4px);
}

/* Sidebar Styles */
.sidebar {
    width: 60px;
    position: fixed;
    left: 0;
    top: 4rem;
    bottom: 0;
    background: linear-gradient(180deg, #0d1130 0%, #121c44 100%);
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    overflow-x: hidden;
    z-index: 40;
}

.sidebar-content {
    height: 100%;
    overflow-y: auto;
    overflow-x: hidden;
    scrollbar-width: thin;
    padding: 0.5rem 0;
}

.sidebar-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 60px;
    padding: 0.5rem 0;
    position: relative;
    color: rgba(255, 255, 255, 0.7);
    transition: all 0.2s ease;
    text-decoration: none;
}

.sidebar-icon {
    width: 20px;
    height: 20px;
    margin-bottom: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.sidebar-icon svg {
    width: 20px;
    height: 20px;
    fill: currentColor;
}

.sidebar-item {
    font-size: 11px;
    letter-spacing: -0.2px;
    text-align: center;
    white-space: nowrap;
    color: rgba(255, 255, 255, 0.7);
}

.category-label {
    padding: 0.75rem 0;
    font-size: 11px;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.4);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    text-align: center;
    margin-top: 0.5rem;
}

.badge {
    position: absolute;
    right: 8px;
    top: 8px;
    min-width: 16px;
    height: 16px;
    padding: 0 4px;
    font-size: 10px;
    font-weight: 500;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.2);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
}

.badge.new {
    background: #2dce89;
}

.category-count {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    font-size: 11px;
    color: rgba(255, 255, 255, 0.5);
}

/* Hover Effects */
.sidebar-link:hover {
    color: #ffffff;
    background: rgba(255, 255, 255, 0.1);
}

.sidebar-link:hover .sidebar-item {
    color: #ffffff;
}

/* Scrollbar */
.sidebar::-webkit-scrollbar,
.sidebar-content::-webkit-scrollbar {
    width: 4px;
}

.sidebar::-webkit-scrollbar-track,
.sidebar-content::-webkit-scrollbar-track {
    background: transparent;
}

.sidebar::-webkit-scrollbar-thumb,
.sidebar-content::-webkit-scrollbar-thumb {
    background: rgba(255, 255, 255, 0.1);
    border-radius: 4px;
}

